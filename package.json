{
  "name": "rolldown-plugin-require-cjs",
  "version": "0.3.0",
  "packageManager": "pnpm@10.18.1",
  "description": "Transform ESM imports to CJS requires when the imported module is pure CJS.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/rolldown-plugin-require-cjs#readme",
  "bugs": {
    "url": "https://github.com/sxzz/rolldown-plugin-require-cjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/rolldown-plugin-require-cjs.git"
  },
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "rolldown": "*"
  },
  "dependencies": {
    "cjs-module-lexer": "^2.1.0",
    "empathic": "^2.0.0",
    "magic-string-ast": "^1.0.3",
    "mlly": "^1.8.0",
    "unplugin-utils": "^0.3.1"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@sxzz/eslint-config": "^7.2.7",
    "@sxzz/prettier-config": "^2.2.4",
    "@sxzz/test-utils": "^0.5.11",
    "@types/node": "^24.7.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "^10.5.0",
    "prettier": "^3.6.2",
    "rolldown": "1.0.0-beta.41",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "prettier": "@sxzz/prettier-config"
}
